{{> navbar}}
<main class="container">
    <h1 class="my-3">{{title}}</h1>
    <h3 class="my-3">Bienvenido {{user.name}}</h3>
    <div class="row">
        {{#each products.payload}}
            <div class="col-md-4 col-sm-6 col-12">
                <div class="card my-3">
                    <img src="http://localhost:8080/api/products/{{this._id}}/img" height="320px" class="card-img-top" alt="{{this.name}}">
                    <div class="card-body" data-id="{{this._id}}" data-owner="{{this.owner}}">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="card-text">$ {{this.price}}</p>
                        <p class="card-text">{{this.category}}</p>
                        <p class="card-text"><small class="text-body-secondary">Stock: {{this.stock}}</small></p>
                    </div>
                </div>
            </div>
        {{/each}}
        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    {{#if products.prevLink}}
                        <a
                            class="page-link"
                            href="{{products.prevLink}}"
                        >&laquo;</a>
                    {{else}}
                        <span class="page-link">&laquo;</span>
                    {{/if}}
                </li>
                <li class="page-item">
                    <span class="page-link">{{products.page}}</span>
                </li>
                <li class="page-item">
                    {{#if products.nextLink}}
                        <a
                            class="page-link"
                            href="{{products.nextLink}}"
                        >&raquo;</a>
                    {{else}}
                        <span class="page-link">&raquo;</span>
                    {{/if}}
                </li>
            </ul>
        </nav>
    </div>
    <input id="cartId" type="hidden" value="{{user.cart}}">
    <input id="owner" type="hidden" value="{{user.id}}">
    <input id="role" type="hidden" value="{{user.role}}">
</main>
<script src="./js/products.js"></script>