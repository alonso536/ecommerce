<main class="container">
  <h1 class="text-center my-3">{{title}}</h1>
  <div class="row">
    <div class="col-md-3"></div>
    <form class="col-md-6 col-12">
      <div class="mb-3">
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          placeholder="Ingrese la nueva contraseña"
        />
        <small class="text-danger error-text"></small>
      </div>
      <div class="mb-3">
        <input
          type="password"
          class="form-control"
          id="password2"
          name="password2"
          placeholder="Repita la contraseña"
        />
        <small class="text-danger error-text"></small>
      </div>
      <div>
        <small class="text-success mb-3" id="success"></small>
      </div>
      <div>
        <small class="text-danger mb-3" id="error"></small>
      </div>
      <button
        type="submit"
        class="btn btn-primary bg-gradient my-3"
      >Enviar</button>
      <div>
      </div>
    </form>
    <input type="hidden" id="email" value="{{email}}" />
    <div class="col-md-3"></div>
  </div>
</main>
<script src="./js/passwordRecovery.js"></script>