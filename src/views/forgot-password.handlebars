<main class="container">
  <h1 class="text-center my-3">{{title}}</h1>
  <div class="row">
    <div class="col-md-3"></div>
    <form class="col-md-6 col-12">
      <input
        type="text"
        class="form-control my-3"
        id="email"
        name="email"
        placeholder="Ingrese su email"
      />
      <div>
        <small class="text-success mb-3" id="success"></small>
      </div>
      <div>
        <small class="text-danger mb-3" id="error"></small>
      </div>
      <button type="submit" class="btn btn-primary bg-gradient my-3">Recuperar
        contraseña</button>
      <div>
        <a class="link-underline link-underline-opacity-0" href="/login">Iniciar
          sesión</a>
      </div>
    </form>
    <div class="col-md-3"></div>
  </div>
</main>
<script src="./js/forgotPassword.js"></script>