<main class="container">
    <h1 class="text-center my-3">{{title}}</h1>
    <div class="row">
        <div class="col-md-3"></div>
        <form class="col-md-6 col-12">
            <input
                type="email"
                class="form-control my-3"
                id="email"
                name="email"
                placeholder="Email"
            />
            <input
                type="password"
                class="form-control my-3"
                id="password"
                name="password"
                placeholder="Contraseña"
            />
            <div>
                <small class="text-danger mb-3" id="error"></small>
            </div>
            <button
                type="submit"
                class="btn btn-primary bg-gradient my-3"
            >Iniciar sesión</button>
            <div>
                <a
                    class="link-underline link-underline-opacity-0"
                    href="/register"
                >No tienes cuenta? Registrate</a>
            </div>
            <div>
                <a
                    class="btn btn-secondary bg-gradient my-3"
                    href="/api/sessions/github"
                >Entrar con github</a>
            </div>
        </form>
        <div class="col-md-3"></div>
    </div>
</main>
<script src="./js/login.js"></script>